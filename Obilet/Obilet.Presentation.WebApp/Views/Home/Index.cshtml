@using Obilet.Presentation.WebApp.Helpers
@model Obilet.Core.Models.BusJourneys.BusJourneyFilterModel
@{
    ViewData["Title"] = "Bilet Bul";
    ViewData["Error"] = @ViewContext.HttpContext.Request.Query["ErrorMessage"].FirstOrDefault();
}

<form method="get" asp-action="Index" asp-controller="Journey">
    <div class="card obilet-card border-0">
        <div class="card-body d-flex align-items-end">
            <i class="fa-solid fa-location-pin obilet-icon-location mb-2 fs-5"></i>
            @Html.LocationDropDownListFor(m => m.OriginId, optionList: new SelectList(ViewBag.BusLocationList, "Value", "Text"), labelText: "Nereden")
        </div>
    </div>
    <div class="position-relative">
        <button type="button" class="btn btn-default btn-circle btn-lg position-absolute swap end-0 top-0 mt-3 border-secondary shadow-none" id="locationSwap">
            <i class="fa fa-arrows-up-down obilet-icon-location p-1 fs-5"></i>
        </button>
    </div>
    <div class="card border-0 mt-1">
        <div class="card-body d-flex align-items-end">
            <i class="fa-solid fa-location-dot obilet-icon-location mb-2 fs-5"></i>
            @Html.LocationDropDownListFor(m => m.DestinationId, optionList: new SelectList(ViewBag.BusLocationList, "Value", "Text"), labelText: "Nereye")
        </div>
    </div>

    <div class="card obilet-card mt-4 border-0">
        <div class="card-body d-flex align-items-end">
            <i class="fa-solid fa-calendar-days obilet-icon-location mb-2 fs-5 me-2"></i>
            <div class="form-group flex-grow-1">
                <label for="DepartureDateLabel" class="text-primary fw-bold ms-2">Tarih</label>
                <input asp-for="DepartureDate" type="date" id="DepartureDate" name="DepartureDate" class="form-control border-0 shadow-none custdatepicker bg-white" placeholder="" aria-label="">
            </div>
            <div class="d-flex flex-column">
                <div class="text-end">                   
                    <button type="button" id="todayButton" class="btn btn-sm btn-outline-secondary mt-2 w-100">Bugün</button>
                </div>
                <div class="text-end">
                    <button type="button" id="tomorrowButton" class="btn btn-sm btn-secondary mt-2 w-100">Yarın</button>
                </div>
            </div>
        </div>
    </div>
    @if (ViewData["Error"] is not null)
    {
        <div class="alert alert-danger mt-2">
            @ViewData["Error"]
        </div>
    }

    <div class="d-flex flex-row align-items-end me-5 ms-5 mt-4 justify-content-end">
        <button type="submit" class="btn btn-primary btn-lg  w-100">Bileti Bul</button>
    </div>

</form>

